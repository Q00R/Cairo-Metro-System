              <li><a href="/manage/stations">Station</a></li>
              <li><a href="/manage/zones">Zones</a></li>
              <div class="dropdown navbar navbar-inverse nav navbar-nav">
                <li><a>Requests</a></li>
                <div class="dropdown-content navbar navbar-inverse nav navbar-nav">
                  <li><a href="/manage/requests/seniors">Senior</a></li>
                  <li><a href="/manage/requests/refunds">Refund</a></li>
                </div>
              </div>
            {{/isAdmin}}
          </ul>
          <ul class="nav navbar-nav navbar-right" style="padding-right:2%">
            <li><a style="color:rgb(31, 211, 211)" href="/resetPassword">Reset Password</a></li>
            <li><a  style="color:rgb(0, 0, 0)" href="/">Logout</a></li>
          </ul>
       </nav>
      </div>
    <br/>

    <div>
      <h1 style="text-align: center;">Senior Requests</h1><br><br>
    </div>
      <table class="table" style="max-width: 75%; margin-left: auto; margin-right: auto;">
        <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Status</th>
            <th scope="col">User Id</th>
            <th scope="col">National Id</th>
            <th scope="col">Accept/Reject</th>
          </tr>
          {{#seniors}}
            <tr>
              <td>{{id}}</td>
              <td>{{status}}</td>
              <td>{{userId}}</td>
              <td>{{nationalId}}</td>
              <td>
                {{#isAdmin}}
                  <input id="btnUpdateStation{{id}}" onclick="updateStatus({{id}}, 'accepted')" type="button" value="ðŸ’š" class="btn btn-primary" style="background-color: rgb(100, 255, 92);">
                  <input id="btnDeleteStation{{id}}" onclick="updateStatus({{id}}, 'rejected')" type="button" value="ðŸ’”" class="btn btn-primary" style="background-color: rgb(255, 70, 70);">
                {{/isAdmin}}
              </td>
            </tr> 
          {{/seniors}}
        </thead>
      </table>
    </div>
  </body>
