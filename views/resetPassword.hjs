<!DOCTYPE html>
<html>
  <head>
    <head>
      <link rel='stylesheet' href='/styles/bootstrap.min.css' />
      <link rel='stylesheet' href='/styles/style.css' />
      <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
      <script src="/js/bootstrap.min.js" type="text/javascript"></script>
    </head>
  </head>
  <body>
      <script>
      $(document).ready(function(){
        $("#submit").click(function() {
          const newPassword = $('#newPassword').val();

          const data = {
            newPassword,
          };

          $.ajax({
            type: "PUT",
            url: '/api/v1/password/reset',
            data,
            success: function(serverResponse) {
              if(serverResponse) {
                alert(`Password reset successful! : ${serverResponse.responseText}`);
              }
            },
            error: function(errorResponse) {
              if(errorResponse) {
                alert(`Error resetting password: ${errorResponse.responseText}`);
              }            
            }
          });
        });
      });
      </script>    
    <div>
      <nav class="navbar navbar-inverse" style="padding-left:130px;">
          <ul class="nav navbar-nav">
            <li class="active"><a href="/dashboard">Home</a></li>
          </ul>
      </nav>
    </div>

    <div class="center">
      <h1>Reset Password</h1>
    </div><br><br>
    <div style="padding-left: 400px">
    <form class="form-horizontal" style="width: 50%;">
      <div class="form-group">
              <label for="newPassword" class="form-check-label">New Password</label>
              <input type="text" class="form-control" id="newPassword" name="newPassword" placeholder="e.g 123qwe" value="">
                <small id="passHelp" class="form-text text-muted">Passwords should only be in your possession.</small>
      </div>
      <div class="form-group">
              <input id="submit" name="submit" type="button" value="Reset Password" class="btn btn-primary">
      </div>
  </form>
    </div>
  </body>
</html>
