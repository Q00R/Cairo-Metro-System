<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Reset Password</title>
  <link rel="stylesheet" href="/styles/bootstrap.min.css">
  <link rel="stylesheet" href="/styles/resetpass.css">
  <script src="/js/jquery-2.2.0.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <style>
  .navbar {
    padding-left: 2%;
  }
  .navbar-right {
    padding-right: 2%;
  }
  .center {
    text-align: center;
    margin-left: auto;
    margin-right: auto;
    display: block;
  }
  .form-horizontal {
    width: 50%;
    margin-left: auto;
    margin-right: auto;
  }
</style>

</head>
<body>
  <div>
    <nav class="navbar navbar-inverse">
      <ul class="nav navbar-nav">
        <li><a href="/dashboard">Home</a></li>
        <li><a href="/stations">Station</a></li>
        <li><a href="/users">Users</a></li>
        <li><a href="/subscriptions">Subscriptions</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><a style="color: goldenrod" href="/resetPassword">Reset Password</a></li>
        <li><a style="color: crimson" href="/">Logout</a></li>
      </ul>
    </nav>
  </div>

  <div class="center">
    <h1><u>Reset Password</u></h1>
  </div>

  <br><br>

  <div>
    <form class="form-horizontal">
      <div class="form-group">
        <label for="newPassword" class="form-check-label">New Password</label>
        <input type="password" class="form-control" id="newPassword" name="newPassword" placeholder="e.g. 123qwe">
        <small id="passHelp" class="form-text text-muted">Passwords should be kept secure.</small>
      </div>
      <div class="form-group">
        <input id="submit" name="submit" type="button" value="Reset Password" class="btn btn-primary">
      </div>
    </form>
  </div>

  <script>
  $(document).ready(function() {
    $("#submit").click(function() {
      const newPassword = $('#newPassword').val();
      
      if (newPassword === '') {
        alert('Please enter a new password.');
        return;
      }
      
      const data = {
        newPassword,
      };

      $.ajax({
        type: "PUT",
        url: '/api/v1/password/reset',
        data,
        success: function(serverResponse) {
          if (serverResponse) {
            alert(`Password reset successful! : ${serverResponse.responseText}`);
          }
        },
        error: function(errorResponse) {
          if (errorResponse) {
            alert(`Error resetting password: ${errorResponse.responseText}`);
          }
        }
      });
    });
  });
</script>

</body>
</html>
