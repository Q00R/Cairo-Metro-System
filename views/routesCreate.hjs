<!DOCTYPE html>
<html>

<head>
    <title>Routes</title>
    <link rel='stylesheet' href='/styles/bootstrap.min.css' />
    <link rel='stylesheet' href='/styles/style.css' />
    <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $("#addRoute").click(function () {
                const newStationId = $("#newStationId").val();
                const connectedStationId = $("#toStationId").val();
                const routeName = $("#routeName").val();

                data = { newStationId, connectedStationId, routeName };
                console.log(data);
                $.ajax({
                    type: "POST",
                    url: "/api/v1/route",
                    data,
                    success: function (serverResponse) {
                        $("#newStationId").val("");
                        $("#toStationId").val("");
                        $("#routeName").val("");
                        alert(JSON.stringify(serverResponse));
                    },
                    error: function (serverResponse) {
                        alert("Error\n" + JSON.stringify(serverResponse));
                    }
                });
            });
        });
    </script>
</head>

<body>
    <div>
        <div>
        <nav class="navbar navbar-inverse" style="padding-left:1%;">
          <ul class="nav navbar-nav">
            <li class="active"><a href="/dashboard">Home</a></li>
            <li><a href="/stations">Stations</a></li>
            <li><a href="/users">Users</a></li>
            {{#isNormal}}
              <li><a href="/subscriptions">Subscriptions</a></li>
              <li><a href="/requests/refund">Refund Ticket</a></li>
              <li><a href="/requests/senior">Senior Citizens</a></li>
              <li><a href="/price">Ticket Price</a></li>
              <li><a href="/tickets">Book a ticket</a></li>
              <li><a href="/rides/simulate">Rides</a></li>
            {{/isNormal}}
            {{#isAdmin}}
              <li><a href="/manage/routes">Routes</a></li>
               <li><a href="/manage/stations">Station</a></li>
              <li><a href="/manage/zones">Zones</a></li>
              <li><a href="/manage/routes">Routes</a></li>
              <div class="dropdown navbar navbar-inverse nav navbar-nav">
                <li><a>Requests</a></li>
                <div class="dropdown-content navbar navbar-inverse nav navbar-nav">
                  <li><a href="/manage/requests/seniors">Senior</a></li>
                  <li><a href="/manage/requests/refunds">Refund</a></li>
                </div>
              </div>
            {{/isAdmin}}
          </ul>
          <ul class="nav navbar-nav navbar-right" style="padding-right:2%">
            <li><a style="color:goldenrod" href="/resetPassword">Reset Password</a></li>
            <li><a  style="color:crimson" href="/">Logout</a></li>
          </ul>
       </nav>
      </div>
        <br />

        <div style="padding-left: 5%; font-size: 20px;">
            <a href="/manage/routes">&lt;&lt;Back</a><br>
        </div>
        <div>
            <h1 style="text-align: center;">Create a new route</h1><br><br>
        </div>

        <div style="padding-left: 30%">
            <form class="form-horizontal" style="width: 50%;">
                <div class="form-group">
                    <label for="newStationId" class="col-sm-2 control-label">From Station Id</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="newStationId" name="newStationId"
                            placeholder="e.g. 1" value="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="toStationId" class="col-sm-2 control-label">To Station Id</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="toStationId" name="toStationId"
                            placeholder="e.g. 2" value="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="routeName" class="col-sm-2 control-label">Route Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="routeName" name="routeName"
                            placeholder="e.g. Hamada" value="">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-10 col-sm-offset-2">
                        <input id="addRoute" name="addRoute" type="button" value="Add Route" class="btn btn-primary">
                    </div>
                </div>

        </div>
</body>

</html>